# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_contraseña_mysql_aqui
DB_DATABASE=votaconciencia_db

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
PORT=3000

# ============================================
# SEGURIDAD - JWT
# ============================================
# Genera una clave secreta aleatoria y segura
# Puedes usar: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_clave_secreta_jwt_muy_segura_y_larga

# ============================================
# OPENAI API (OPCIONAL)
# ============================================
# Solo necesario si usarás la funcionalidad de IA
# Obtén tu API key en: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-tu-api-key-de-openai-aqui

